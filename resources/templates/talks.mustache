{{> header}}

<div class="container" id="mainContent">
    <header>
        <h1>{{page-title}}</h1>
        <h2>I love talking about big ideas in groups or one-on-one.</h2>
    </header>

    {{#talks}}
    {{{row-start}}}
        <div class="twoColumns">
            {{#video}}
            <div class="embed-responsive embed-responsive-16by9"><iframe src="{{media}}" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe></div>
            {{/video}}
            {{#image}}
            <img src="img/{{media}}" class="img-responsive" />
            {{/image}}
            <div class="panel panel-info">
                <div class="panel-heading"><h3>{{title}}</h3></div>
                <div class="panel-content">
                    <dl class="dl-horizontal">
                        <dt>Location</dt>
                        <dd>{{location}}</dd>
                        <dt>Date</dt>
                        <dd>{{date}}</dd>
                        <dt>Synopsis</dt>
                        <dd>{{synopsis}}</dd>
                        <dt>Link</dt>
                        <dd><a href="{{link}}">Talk</a></dd>
                    </dl>
                </div>
            </div> <!-- /panel -->
        </div> <!-- /column -->
    {{{row-end}}}
    {{/talks}}


</div>

{{> footer}}
